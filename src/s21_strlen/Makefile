CC=gcc
CFLAGS=-Wall -Werror -Wextra -std=c11 -c
CFLAGS=-std=c11 -c
LIBS=-lcheck

SOURCE_DIRECTORIES=

BUILD_DIRECTORY=build
DEPENDENCY_DIRECTORY=$(BUILD_DIRECTORY)/dependencies


TEST_FILE=$(wildcard *.check)
TEST_FILE_GENERATED=$(patsubst %.check,%.c,$(TEST_FILE))
OBJECT_TEST_FILE_GENERATED=$(BUILD_DIRECTORY)/$(notdir $(patsubst %.c,%.o,$(TEST_FILE_GENERATED)))
TARGET_TEST=$(BUILD_DIRECTORY)/$(notdir $(patsubst %.o,%.out,$(TEST_FILE_GENERATED)))


SOURCE_FILES=$(wildcard *.c)
SOURCE_FILES+=$(foreach directory_as_variable, $(SOURCE_DIRECTORIES),$(wildcard $(directory_as_variable)/*.c))
SOURCE_FILES_ALL=$(SOURCE_FILES)
SOURCE_FILES_ALL+=$(TEST_FILE_GENERATED)
# SOURCE_FILES_TESTS=$(foreach directory_as_variable, $(SOURCE_DIRECTORIES),$(wildcard $(directory_as_variable)/*.check))


OBJECT_FILES_IN_SOURCE_DIRECTORIES=$(patsubst %.c,%.o,$(SOURCE_FILES))
OBJECT_FILES_IN_BUILD_DIRECTORIES=$(addprefix $(BUILD_DIRECTORY)/,$(OBJECT_FILES_IN_SOURCE_DIRECTORIES))

DEPENDENCY_FILES_ALL_IN_SOURCE_DIRECTORIES=$(patsubst %.c,%.d,$(SOURCE_FILES))
DEPENDENCY_FILES_ALL_IN_DEPENDENCY_DIRECTORIES=$(addprefix $(DEPENDENCY_DIRECTORY)/,$(DEPENDENCY_FILES_ALL_IN_SOURCE_DIRECTORIES))


ALL_TESTS_IN_ONE_FILE_GENERATED_DEPENENCY=$(DEPENDENCY_DIRECTORY)/$(subst .c,.d,$(notdir $(ALL_TESTS_IN_ONE_FILE_GENERATED)))
DEPENDENCY_DIRECTORIES=$(dir $(DEPENDENCY_FILES_ALL_IN_DEPENDENCY_DIRECTORIES))
DEPENDENCY_DIRECTORIES+=$(dir $(ALL_TESTS_IN_ONE_FILE_GENERATED_DEPENENCY))

DEPENDENCY_FILES_ALL_IN_DEPENDENCY_DIRECTORIES+=$(ALL_TESTS_IN_ONE_FILE_GENERATED_DEPENENCY)

DEPFLAGS=-MT $@ -MMD -MP -MF $(DEPENDENCY_DIRECTORY)/$*.d



run_test: test
		$(TARGET_TEST)


test: $(TARGET_TEST)


unite_tests: $(ALL_TESTS_IN_ONE_FILE)


generate_test_file: $(TEST_FILE_GENERATED)


$(TEST_FILE_GENERATED): $(TEST_FILE)
		checkmk $< > $@


$(TARGET_TEST): $(OBJECT_FILES_IN_BUILD_DIRECTORIES) $(OBJECT_MAIN_TEST)
		$(CC) -o $@ $^ $(LIBS)

# $(OBJECT_MAIN_TEST): $(ALL_TESTS_IN_ONE_FILE_GENERATED)
# $(CC) -o $@ 



$(OBJECT_FILES_IN_BUILD_DIRECTORIES): $(BUILD_DIRECTORY)/%.o: %.c $(DEPENDENCY_DIRECTORY)/%.d | $(DEPENDENCY_DIRECTORY)
		echo 'source: ' $<
		echo 'object: ' $@
		mkdir -p $(dir $@)
		mkdir -p $(DEPENDENCY_DIRECTORY)/$(dir $*)
		$(CC) $(CFLAGS) $< -o $@ $(DEPFLAGS)


$(OBJECT_MAIN_TEST): $(ALL_TESTS_IN_ONE_FILE_GENERATED) $(ALL_TESTS_IN_ONE_FILE_GENERATED_DEPENENCY) | $(DEPENDENCY_DIRECTORY)
		echo 'source: ' $<
		echo 'object: ' $@
		mkdir -p $(dir $@)
		mkdir -p $(DEPENDENCY_DIRECTORY)/$(dir $*)
		$(CC) $(CFLAGS) $< -o $@ $(DEPFLAGS)


$(DEPENDENCY_DIRECTORY):
		mkdir -p $(DEPENDENCY_DIRECTORY)


$(DEPENDENCY_FILES_ALL_IN_DEPENDENCY_DIRECTORIES):


clean: 
		rm -rf $(BUILD_DIRECTORY)/* $(DEPENDENCY_DIRECTORY)/*


print:
		#echo $(SOURCE_DIRECTORIES)
		#echo $(SOURCE_FILES)
		#echo $(TEST_FILE)
		#echo $(TEST_FILE_GENERATED)
		#echo $(OBJECT_TEST_FILE_GENERATED)
		#echo $(TARGET_TEST)
		#echo $(OBJECT_FILES_IN_BUILD_DIRECTORIES)


include $(wildcard $(DEPENDENCY_FILES_ALL_IN_DEPENDENCY_DIRECTORIES))